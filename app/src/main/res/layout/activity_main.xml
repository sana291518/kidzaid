<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KidzAid"
        android:visibility="gone"/>

    <!-- Welcome Message TextView -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="392dp"
        android:layout_height="148dp"
        android:layout_below="@id/titleText"
        android:layout_marginTop="38dp"
        android:background="@drawable/rounded_corner_background"
        android:gravity="center"
        android:padding="12dp"
        android:text="Hey there! Welcome to KidzAid! Ready to start your adventure? Choose your age group!"
        android:textColor="#FF4081"
        android:textSize="19sp"
        android:textStyle="bold" />
s
    <TextView
        android:id="@+id/remainingTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time remaining: 30:00"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:padding="10dp"/>


    <!-- Button for 4-6 Years -->
    <Button
        android:id="@+id/buttonAgeGroup1"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/cloud_button"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Button for 7-9 Years -->
    <Button
        android:id="@+id/buttonAgeGroup2"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAgeGroup1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/cloud_button"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Button for 10-12 Years -->
    <Button
        android:id="@+id/buttonAgeGroup3"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAgeGroup2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/cloud_button"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
