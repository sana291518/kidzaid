<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF9E6"
    android:gravity="center">

    <!-- Question Text -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:text="Question will appear here" />

    <!-- Image for the question -->
    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/cute_image_border"
        android:contentDescription="Question-related image" />

    <!-- Correct Answer Image (Initially hidden) -->
    <ImageView
        android:id="@+id/correctAnswerImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:contentDescription="Correct answer image" />

    <!-- Options -->
    <Button
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option 1"
        android:backgroundTint="#FFB6C1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Option 2"
        android:backgroundTint="#FFB6C1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option 3"
        android:backgroundTint="#FFB6C1"
        android:textSize="16sp" />
</LinearLayout>
